CC		= g++-mp-4.7
GSL		= /opt/local/lib/libgsl.a /opt/local/lib/libgslcblas.a 
CC_FLAGS	= -Wall -O3 -DHAVE_INLINE -static-libgcc -static-libstdc++ -fopenmp
LD_FLAGS	= ${GSL} -fopenmp
#
filterHDobj	= emission.o common-functions.o jump-diffusion.o minimization.o
cloneobj	= clone.o clone-*.o
cloneHDobj	= $(cloneobj) emission.o common-functions.o minimization.o log-space.o cloneHD-functions.o
#
all:	filterHD cloneHD
	rm -f ./*.o
filterHD: $(filterHDobj) filterHD.o
	$(CC) $(CC_FLAGS) $(filterHDobj) filterHD.o -o ./build/filterHD $(LD_FLAGS)
cloneHD: $(cloneHDobj) cloneHD.o
	 $(CC) $(CC_FLAGS) $(cloneHDobj) cloneHD.o -o ./build/cloneHD $(LD_FLAGS)	
#
$(cloneobj) : clone.h
$(filterHDobj) $(cloneHDobj) : $(.TARGET).h
%.o: %.cpp
	$(CC) $(CC_FLAGS) -c $(.SOURCE) -o $(.TARGET)
clean:
	rm -f ./*.o
